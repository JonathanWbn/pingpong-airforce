{
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "globals": {
    "React": true
  },
  "rules": {
    "react/jsx-no-undef": [2, { "allowGlobals": true }],
    "no-extra-semi": 0
  }
}
